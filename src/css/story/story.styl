/* CUSTOM STORY STYLE */
body
	font-family $sans
	background-color $off-white

main
	overflow hidden

	section
		margin 4rem auto

figure
	max-width 560px
	min-height 320px
	margin 0 auto
	position relative
	
	video
		background-color $yellow
		display block
		margin 0 auto
		cursor pointer

	button
		pointer-events none
		position absolute
		top 50%
		left 50%
		width 20%
		height 20%
		background transparent
		line-height 1
		transform translate(-50%, -50%)
		&.is-hidden
			hidden()
	svg
		display block
		width 100%
		height 100%
		polygon, circle
		stroke-width 1px
		fill $bg
		stroke $fg

#story
	margin-top 8rem
	max-width 50rem
	.prose
		max-width 100%
	p 
		set-type-size(medium, true)
		+mq('bp-3')
			set-type-size(x-large, true)
			text-align justify

