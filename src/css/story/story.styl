	.prose
		// max-width 100%
	p 
		set-type-size(medium, true)
		+mq('bp-3')
			set-type-size(x-large, true)
			// text-align justify

#takeaways, #method
	strong
		font-family $sans-display
	ul
		padding 0 1rem

